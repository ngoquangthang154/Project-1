<% if @news.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "views.shared.error_mess.text"%>
      <%= pluralize @news.errors.count, t("views.shared.error_mess.error") %>
    </div>
    <ul>
      <% @news.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
