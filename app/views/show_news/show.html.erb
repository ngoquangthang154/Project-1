<div class="container">
  <div class="row">
    <div class="site-heading text-center">
      <h3><%= t "views.show_news.show.title" %></h3>
      <p><%= t "views.show_news.show.destitle" %></p>
      <div class="border"></div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="btn-group show-on-hover">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <%= t "views.show_news.show.choice" %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "#{t "views.show_news.show.all"}", news_path %></li>
      <li class="divider"></li>
      <% @allType.each do |type| %>
      <li>
        <%= link_to type.name, news_path(type_id: type.id) %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 jasgrid">
      <% @news.each_with_index do |item, i|  %>
        <% if i.even? %>
          <div class="box-item">
            <div class="box-post">
              <span class="label label-success">
                <%= link_to item.typenew.name, news_path(type_id: item.typenew.id) %>
              </span>
              <h1 class="post-title">
                <%= link_to item.title, newd_path(item.id) %>
              </h1>
              <span class="meta">
                <span>
                  <i class="glyphicon glyphicon-time"></i>
                  <%= item.day_create.to_date %>
                </span>
              </span>
            </div>
            <img src="<%= item.img_thumb %>" class="">
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6 jasgrid">
      <% @news.each_with_index do |item, i|  %>
        <% if i.odd? %>
          <div class="box-item">
            <div class="box-post">
              <span class="label label-success">
                <%= link_to item.typenew.name, news_path(type_id: item.typenew.id) %>
              </span>
              <h1 class="post-title">
                <%= link_to item.title, newd_path(item.id) %>
              </h1>
              <span class="meta">
                <span>
                  <i class="glyphicon glyphicon-time"></i> <%= item.day_create.to_date %>
                </span>
              </span>
            </div>
            <img src="<%= item.img_thumb %>" class="">
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
