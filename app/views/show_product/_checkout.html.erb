<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">
          <%= t "views.show_product.checkout.title" %>
        </h4>
      </div>
      <%= form_tag checkout_path, :method => "post", :id => "checkout_cart" do %>
      <div class="modal-body">
        <div class="form-group">
          <label class="control-label col-sm-2" for="content">
            <%= t "views.show_product.checkout.content" %>
          </label>
          <div class="col-sm-10">
            <%= text_area_tag :content, nil, rows: 5,
            :required => true, class: "form-control",
            placeholder: t("views.show_product.checkout.yourcont") %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="content">
            <%= t "views.show_product.checkout.adress" %>
          </label>
          <div class="col-sm-10">
            <%= text_area_tag :adress, nil, rows: 5,
            :required => true, class: "form-control",
            placeholder: t("views.show_product.checkout.youradr") %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="content">
            <%= t "views.show_product.checkout.phone" %>
          </label>
          <div class="col-sm-10">
            <%= text_field_tag :phone, nil,
            :required => true, class: "form-control",
            placeholder: t("views.show_product.checkout.yourphone")%>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="content">
            <%= t "views.show_product.checkout.price" %>
          </label>
          <div class="col-sm-9">
            <%= text_field_tag :price, "#{@total}",:readonly => true, class: "form-control" %>
          </div>
        </div>
        <div >
          <label>
            <%= radio_button_tag "group_rbt", :thursday, :true %>
            <%= t "views.show_product.checkout.dothurs" %>
          </label>
        </div>
        <div class="form-group">
          <label>
            <%= radio_button_tag "group_rbt", :friday %>
            <%= t "views.show_product.checkout.dofri" %>
          </label>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "views.show_product.checkout.close" %>
        </button>
        <%= button_tag(type: "submit", :name => nil, class: "btn btn-success") do %>
        <%= t "views.show_product.checkout.send" %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
