<% provide(:title, t("products.index.title"))%>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="row">
        <div class="header">
          <div class="col-md-3">
            <h4 class="title"><%= t "products.index.title2" %></h4>
          </div>
          <div class="col-md-9">
            <div class="col-md-6 ">
              <%= form_tag admin_typenews_index_path, :method => "get", class: "navbar-form navbar-left form-search" do %>
              <div class="form-group">
                <%= text_field_tag :search, params[:search], class: "search-product form-control", placeholder: "Search" %>
              </div>
              <%= submit_tag t("products.filter.search") , name: nil, class: "btn btn-default" %>
              <% end %>
              <ul class="list-search">
              </ul>
            </div>
            <div class="col-md-3 col-md-push-3">
              <button type="button" class="btn btn-default navbar-btn">
                <a href="#" class= "glyphicon glyphicon-plus"></a>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th class="text-center"><%= t "products.index.id "%></th>
              <th class="text-center"><%= t "products.index.name "%></th>
              <th class="text-center"><%= t "products.index.action "%></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "typenew", collection: @typenews, as: "tpn" %>
          </tbody>
        </table>
        <%= paginate @typenews, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </div>
</div>
